pipeline { 
    agent any 
    stages { 
        stage('Git Checkout') { 
            steps { 
                script { 
                    git branch: branch_or_tag, 
                        credentialsId: 'rajath-my-git-pat', // Provide your credentials ID
                        url: 'https://github.com/rajath-optit/build_js_react_app.git' // Provide your Git repository URL
                }
            } 
        }
stage('Build reactJS') {
            steps {
                script {
                    echo "reactjs build"
                    sh 'npm install'
                }
            }
        }
            script {
                    echo 'Creating Docker image...'
                    sh "docker build -t raorajath/build_js_react_app:latest ."
                }
    }
}
