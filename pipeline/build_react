pipeline {
    agent any 
    stages {
        stage('Git Checkout') { 
            steps { 
                script { 
                    git branch: 'master', // Replace with your desired branch
                        credentialsId: 'rajath-my-git-pat',
                        url: 'https://github.com/rajath-optit/build_js_react_app.git'
                }
            } 
        }

        stage('Build reactJS') {
            steps {
                script {
                    echo "reactjs build"
                    sh 'npm install'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Creating Docker image...'
                    sh "docker build -t bharathoptdocker/rectjs:latest ."
                }
            }
        }
    }
}
